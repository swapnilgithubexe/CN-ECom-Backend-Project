{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "description": "API for ecommerce application",
    "title": "E-Commerce API"
  },
  "host": "localhost:4000",
  "paths": {
      "/api/products": {
        "get": {
          "summary": "Get all products",
          "description": "User to get all the products list",
          "security": [{ "JWT": {} }],
          "responses": {
            "200": {
              "description": "OK"
            },
            "401": {
              "description": "Unauthorized access"
            }
          }
        }
    },
    "/api/users/signin": {
      "post": {
        "summary": "Login",
        "description": "User login to get token",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "User Creds",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string"
                },
                "password": {
                  "type": "string"
                }
              },
              "required": ["email", "Password"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Incorrect creds"
          }
        }
      }
    }
  }
}
